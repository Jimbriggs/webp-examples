<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <description>An example web application showing servlet and JSP programming

Author: Jim Briggs</description>
    <display-name>webapp1</display-name>
    <servlet>
        <servlet-name>ShowFruit</servlet-name>
        <servlet-class>jim.mvc.fruit.ShowFruit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>helloYou</servlet-name>
        <servlet-class>jim.intro.HelloYou</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>helloMime</servlet-name>
        <servlet-class>jim.intro.HelloMIME</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowFruit</servlet-name>
        <url-pattern>/showFruit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>helloYou</servlet-name>
        <url-pattern>/servlet/HelloYou</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>helloMime</servlet-name>
        <url-pattern>/servlet/HelloMIME</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
